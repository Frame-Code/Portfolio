@model ICollection<ProjectEntity>

@if (Model.Count > 0)
{
    <div class="text-center" style="padding-top: 6rem;">
        <h1>Mis trabajos recientes</h1>
    </div>
    
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var project in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@project.ImageURL" class="card-image-top" alt="Project image"/>
                        <div class="card-body">
                            <h4 class="card-title  text-center"><b>@project.Name</b></h4>
                            <p class="card-text">@project.Description</p>
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn btn-primary" href="@project.Link" target="_blank">
                                Visitar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}