@model UserEntity

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Soy @Model.Name </h1>
    <h2>Desarrollador en tecnologías backend como SQL Server, Asp.Net, y Spring boot</h2>
    <img src="~/images/photo.png" alt="My personal photo" class="img-fluid img-thumbnail rounded-circle mt-4"/>
</div>

<div class="text-center">
    <img class="rounded image_logo" src="~/images/logo.png" alt="imagen tecnologías"/>
</div>

<div class="row justify-content-md-center text-center bg-dark text-white">
    <div class="col col-md-7 bienvenida">
        <h1>Mi portfolio</h1>
        <p>
            Apasionado por el mundo de la tecnología y el software.
            Estudiante de la carrera de <b>Ingeniería de Software</b> en la Universidad de Guayaquil.
            Actualmente trabajando para Viaxperta en su <b>software ERP E-production</b> y gran <b>autodidacta</b> con un gran enfoque en el desarrollo backend
            usando tecnologías como <b>SQL Server</b> y <b>AspNet Core</b> 
        </p>
        <br/>
    </div>
</div>

<div style="margin-top: -2px">
    <div class="row justify-content-center text-center" style="margin-top: -70px">
        <div class="col col-3 bg-white skills" style="border-radius: 15px 0 0 15px; box-shadow: 0 5px 5px 0 gray">
            <h3>
                <i class="bi bi-hdd-stack-fill"></i>
                Back-end
            </h3>
            <p>Trabajo desde el desarrollo del dominio del software</p>
            <p class="text-primary cabecera">Stack:</p>
            <p>Asp.NET core, Spring boot, SQL server, My SQL</p>
            <p class="text-primary cabecera">Experiencia:</p>
            <ul>
                <li>Web APIs</li>
                <li>ASP.NET Framework</li>
                <li>Principios SOLID</li>
            </ul>
            <br/><br/>
        </div>
        <div class="col col-3 bg-white skills" style="border-radius: 0 15px 15px 0; box-shadow: 0 5px 5px 0 gray">
            <h3>
                <i class="bi-code-slash"></i>
                Front-end
            </h3>
            <p>Habilidades básicas con posibilidad de adaptación</p>
            <p class="text-primary cabecera">Stack:</p>
            <p>HTML, CSS, Javascript, Blazor</p>
            <p class="text-primary cabecera">Experiencia:</p>
            <ul>
                <li>Bootstrap</li>
                <li>Desarrollo front-end básico</li>
            </ul>

        </div>
        
    </div>
</div>